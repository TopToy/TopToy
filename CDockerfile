# Dockerfile

FROM openjdk:11
MAINTAINER Yehonatan Buchnik <yon_b@cs.technion.ac.il>

ENV TOY_HOME /JToy

RUN mkdir -p ${TOY_HOME}/bin
RUN export PATH="$PATH:${TOY_HOME}/bin"

VOLUME /tmp/JToy
VOLUME ${TOY_HOME}/bin/src/main/resources

#expose Clients port
#EXPOSE 14000
ENV CID=0
ENV SID=0
ENV TXS=100
#Copy configuration
COPY cbin $TOY_HOME/bin

ENTRYPOINT ${TOY_HOME}/bin/run_cdocker.sh ${CID} ${SID} ${TXS}

STOPSIGNAL SIGTERM
